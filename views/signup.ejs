<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>I KNOW YOU</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <script src="https://code.jquery.com/jquery-3.7.1.js" integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>
</head>
<style>
    *{
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    .container-fluid {
        max-width: 900px;
        margin: 0 auto;
        margin-top: 10%;
    }

    .row {
        display: flex;
        flex-direction: row;
        border-radius: 3px;
    }

    .col {
        width: 100vw;
        margin: 10px;
        border: 1px solid #000;
        padding: 20px;
    }

    #username {
        width: 100%;
        padding: 10px;
        margin-top: 10px;
        margin-bottom: 10px;
    }

    #fname, #lname {
        width: 40%;
        padding: 10px;
        margin-top: 10px;
        margin-bottom: 10px;
    }

    #passcode {
        width: 100%;
        padding: 10px;
        margin-top: 10px;
        margin-bottom: 10px;
    }

    #submit {
        width: 100%;
        padding: 10px;
        margin-top: 10px;
        margin-bottom: 10px;
        background-color: #000;
        color: #fff;
        border-radius: 5px;
        border: none;
    }

    #submit:active{
       width: 97%;
    }

    .user-icon, .pass-icon {
        font-size : 20px;
    }

    .signup {
        color: #000;
        text-decoration: none;
        float: inline-end;
        margin-top: 10px;
    }

    .signup:hover {
        color: blue;
        text-decoration: underline;
    }

    .btn {
        width: 40%;
        background-color: rgba(0, 38, 255, 0.571);
        padding: 10px;
        float: inline-end;
        border-radius: 5px;
        border: none;
        
    }

    .btn2 {
        width: 40%;
        background-color: gray;
        padding: 10px;
        float: inline-start;
        border-radius: 5px;
        border: none;
    }

    .btn:active {
        padding: 12px;
        font-size: 18px;
    }

    .btn:hover {
        cursor: pointer;
    }

    .second, .third, .fourth, .fifth, .sixth {
        display: none;
    }

    #error{
        margin: 20px;
        font-size: 18px;
        font-family: monospace;
        color: red;
    }

    #err,#err2{
        width: 100%;
        margin-top: 20px;
        margin-bottom: 20px;
        font-size: 18px;
        font-family: monospace;
    }


</style>
<body>

    <div class="container-fluid">
        <div class="row">

            <div class="col">
                <div class="form">
                    <form method="post" action="/signup" enctype="multipart/form-data">

                        <div class="first">
                            <label class="label">Create your username</label>
                            <input type="text" id="username" class="user" name="username" placeholder="create your username" required/>
                            <button type="button" class="btn" id="first">Next</button>
                            <script>
                             $(document).ready(function(){
                                $('#first').on('click', function(){
                                    $('.first').fadeOut('3000');
                                    $('.second').fadeIn('6000');
                                })
                             })
                            </script>
                        </div>
            
                        <div class="second">
                            <span id="err"></span><label class="label">First name</label>
                            <input type="text" id="username" class="fuser" name="fname" placeholder="enter your first name" required/>
                            
                            <span id="err2"></span> <label class="label">Last name</label>
                            <input type="text" id="username" class="luser" name="lname" placeholder="enter your last name" required/>
                            <button type="button" class="btn" id="second">Next</button>
                            <button type="button" class="btn2" id="second2">Back</button>

                            <script>
                                $(document).ready(function(){
                                    $('#second').on('click', function(){
                                        $('.second').fadeOut('3000');
                                        $('.third').fadeIn('6000');
                                    })
                                })
                                var second2 = document.querySelector('#second2');
                                second2.addEventListener('click', () => {
                                    $('.second').fadeOut('3000');
                                    $('.first').fadeIn('6000');
                                })
                            </script>
                        </div>
            
                        <div class="third">
                            <label>Enter your email address:</label>
                        <input type="email" id="username" name="email" placeholder="enter your email address" required/>
                        <button type="button" class="btn" id="third">Next</button>
                        <button type="button" class="btn2" id="third2">Back</button>

                        <script>
                            $(document).ready(function(){
                                $('#third').on('click', function(){
                                    $('.third').fadeOut('3000');
                                    $('.fourth').fadeIn('6000');
                            })
                            })
                            var third2 = document.querySelector('#third2');
                            third2.addEventListener('click', () => {
                                $('.third').fadeOut('3000');
                                $('.second').fadeIn('6000');
                            })
                        </script>
                        </div>
            
                        <div class="fourth">
                        <input type="text" id="fname" name="age" placeholder="enter your age" required/>
                        <input type="tel" id="lname" name="phone" placeholder="enter your phone number" required/>
                        <input type="date" id="fname" name="dob" placeholder="enter your date of Birth" required/>
                        <input type="tel" id="lname" name="relation" placeholder="whats your relationship status" required/>
                        <input type="tel" id="lname" name="country" placeholder="enter your country" required/>
                        <input type="tel" id="lname" name="city" placeholder="enter your city" required/>
                        <button type="button" class="btn" id="fourth">Next</button>
                        <button type="button" class="btn2" id="fourth2">Back</button>

                        <script>
                            $(document).ready(function(){
                                $('#fourth').on('click', function(){
                                    $('.fourth').fadeOut('3000');
                                    $('.fifth').fadeIn('6000');
                            })
                            })
                            var fourth2 = document.querySelector('#fourth2');
                            fourth2.addEventListener('click', () => {
                                $('.fourth').fadeOut('3000');
                                $('.third').fadeIn('6000');
                            })
                        </script>
                        </div>
            
                        <div class="fifth">
                        <input type="file" id="pic" name="pic" required/>
                        <button type="button" class="btn" id="fifth">Next</button>
                        <button type="button" class="btn2" id="fifth2">Back</button>

                        <script>
                            $(document).ready(function(){
                                $('#fifth').on('click', function(){
                                    $('.fifth').fadeOut('3000');
                                    $('.sixth').fadeIn('6000');
                            })
                            })
                            var fifth2 = document.querySelector('#fifth2');
                            fifth2.addEventListener('click', () => {
                                $('.fifth').fadeOut('3000');
                                $('.fourth').fadeIn('6000');
                            })
                        </script>
                        </div>
            
                        <div class="sixth">
                            <input type="password" id="passcode" name="passcode" placeholder="create your password" required/>
                            <button type="submit" id="submit" >Sign Up</button>
                            <button type="button" class="btn2" id="sixth">Back</button>

                        <script>
                            var sixth = document.querySelector('#sixth');
                            sixth.addEventListener('click', () => {
                                $('.sixth').fadeOut('3000');
                                $('.fifth').fadeIn('6000');
                            })
                        </script>
                        </div>

                    </form>
                </div>

            <br/>
            <br/>
                <a href="/" class="signup">Already have an Account? Click here</a>


            </div>

        </div>
    </div>

</body>
</html>